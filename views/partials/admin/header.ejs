  /* Sidebar Styles */
  .navbar-aside {
      width: 250px; /* Fixed width for the sidebar */
      height: 100%; /* Full height of the viewport */
      background-color: #b0d5de;
      position: fixed; /* Keeps the sidebar fixed to the left */
      top: 0;
      left: 0;
      overflow-y: auto; /* Allows scrolling inside the sidebar */
      display: flex;
      flex-direction: column;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
  }
  
  /* Sidebar Menu */
  .menu-aside {
      list-style: none;
      margin: 0;
      padding: 0;
  }
  
  .menu-item {
      padding: 10px 20px;
  }
  
  .menu-item a.menu-link {
      text-decoration: none;
      display: flex;
      align-items: center;
      color: #310505;
      font-size: 16px;
      padding: 10px 15px;
      border-radius: 8px;
      transition: all 0.3s;
  }
  
  .menu-item a.menu-link:hover,
  .menu-item a.menu-link.active {
      background-color: #6e7e6e;
      color: #ffffff;
  }
  
  .icon {
      margin-right: 10px;
  }
  
  /* Dropdown Menu */
  .dropdown-menu {
      background-color: #bb9aaf;
  }
  
  .dropdown-item:hover {
      background-color: #33053d;
      color: #ffffff;
  }
  
  /* Main Content */
  .main-wrap {
      margin-left: 250px; /* Matches the sidebar width */
      flex-grow: 1;
      background-color: #ffffff;
      height: 100%;
      overflow-y: auto; /* Scrollable content */
      padding: 20px; /* Adds spacing to the main content */
  }
  .main-header {
    display: flex;
    justify-content: space-between; /* Ensures space between left and right sections */
    align-items: center; /* Vertically centers the content */
    background-color: #8da7ab; /* Matches the sidebar style */
    padding: 10px 20px; /* Adds padding for breathing space */
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    position: sticky; /* Keeps the header fixed at the top of the content */
    top: 0;
    z-index: 1000; /* Ensures it stays above other content */
}

/* Search Column (if needed) */
.col-search {
    flex: 1; /* Allows the search area to take up available space */
}

/* Navigation Section (Right Side) */
.col-nav {
    display: flex;
    align-items: center;
    gap: 15px; /* Adds spacing between nav items */
}

.col-nav .btn-mobile {
    display: none; /* Hides the mobile button by default */
}

.col-nav ul.nav {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
}

/* Dropdown Menu */
.nav-item {
    position: relative; /* Required for dropdown positioning */
}

.dropdown-toggle {
    display: flex;
    align-items: center;
    cursor: pointer;
}

.dropdown-menu {
    position: absolute;
    top: 120%; /* Places the dropdown below the toggle */
    right: 0;
    background-color: #fff;
    border: 1px solid #ddd;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    border-radius: 8px;
    padding: 10px 0;
    min-width: 150px;
    z-index: 1001; /* Ensures it appears above other elements */
    display: none; /* Hidden by default */
}

.dropdown-menu.show {
    display: block; /* Displays the dropdown when toggled */
}

.dropdown-item {
    padding: 8px 15px;
    font-size: 14px;
    color: #333;
    text-decoration: none;
    transition: background-color 0.3s ease;
}

.dropdown-item:hover {
    background-color: #33053d; /* Adds hover effect */
    color: #fff;
}

.img-xs {
    width: 32px;
    height: 32px;
    border-radius: 50%; /* Circular avatar */
    object-fit: cover; /* Ensures the image fits inside the circle */
}

/* Responsive Design */
@media (max-width: 768px) {
    .col-nav .btn-mobile {
        display: block; /* Shows the mobile button on smaller screens */
    }

    .col-search {
        display: none; /* Hides the search column for smaller screens */
    }

    .dropdown-menu {
        right: auto; /* Adjust dropdown positioning */
        left: 0;
    }
}
